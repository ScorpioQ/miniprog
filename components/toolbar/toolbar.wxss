.toolbar {
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  border-bottom: 1px solid #EEEEEE;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.tool-btn {
  height: 72rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background: #007AFF;
  border-radius: 8rpx;
  color: white;
  font-size: 28rpx;
  border: none;
}

.tool-btn::after {
  border: none;
}

.icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.label {
  font-size: 28rpx;
}
